<%- include('../partials/header.ejs'); -%>

<main>
    <div class="container">
        <div class="card">
            <div class="card-header">
              Панель администратора
            </div>
            <div class="card-body">
                <h5>Добавление поста</h5>
                <form method="post">
                    <div>
                      <label for="title" class="form-label">Заголовок</label>
                      <input type="text" class="form-control" id="title" name='title'>
                    </div>
                    <div>
                      <label for="description" class="form-label">Описание</label>
                      <input type="text" class="form-control" id="description" name='description'>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <label for="editor" class="form-label">Текст</label>
                        <textarea type="text" class="form-control" id="editor" name='text'></textarea>
                      </div>
                    <button type="submit" class="btn btn-primary" style="display: block; margin: 0 auto;">Добавить пост</button>
                </form>
            </div>
          </div>
    </div>
</main>

<script src="https://cdn.ckeditor.com/ckeditor5/11.0.1/classic/ckeditor.js"></script>
<script>
  ClassicEditor
      .create( document.querySelector( '#editor' ) )
      .catch( error => {
          console.error( error );
      } );
</script>

